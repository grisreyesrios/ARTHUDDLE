<div class="container" id="notes-container">

  <div class="note-title-box">
   <h1 id="notes-header"><%= @workshop.name %></h1>
   <p id="notes-icon"><%= image_tag "notebook.png", height: 100; %></p>
   <h2 id="notes-about">Got any tips? Thoughts? Feedback? Add it here!</h2>
  </div>

  <div class="note-poster">

  <%= simple_form_for([@workshop, Note.new]) do |f| %>
    <%= f.input :title %>
    <%= f.input :content, as: :hidden %>
    <trix-editor class="trix-editor" input="note_content"></trix-editor>
    <p id="notes-submit"><%= f.submit "Add" %></p>
  <% end %>


</div>


  <% @notes.reverse.each do |note| %>

    <div class="note">
          <p id="note-title"><%= note.title %></p>
          <br>
          <p id="note-content"><%= note.content.html_safe %></p>
          <br><br>
          <p id="note-stamp"><%= "-#{note.user.email}, #{time_ago_in_words(note.created_at)} ago " %></p>
    </div>
    <% end %>

</div>



