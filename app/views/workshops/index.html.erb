<div class="container">
  <h1 id="browse-header">Browse Workshops</h1>
  <div class="hostbutton" id="hostbutton">
    <%= link_to 'HOSTING A WORKSHOP? LIST IT HERE!', new_workshop_path, class: "btn-book" %>
  </div>
</div>


<div class="container" id="workshop-card-container">
  <% @workshops.each_with_index do |workshop, index| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="workshop-index-card shadowbox" id="<%= index %>">
        <div class="workshop-top-image-box">
          <%= cl_image_tag workshop.photo, crop: :fill, class: "workshop-card-image" unless workshop.photo.blank? %>
        </div>
        <div class="workshop-main-text">
          <% asset_url = "#{workshop.category}.png" %>
          <%= image_tag(asset_url, width: 25, height: 25) %>
          <%= link_to workshop.name, workshop_path(workshop) %>
         <div id="workshop-index-address"><%= workshop.address %></div>
        </div>
        <div class="favourite-ticker" id="fav-link-<%= workshop.id %>">
           <% if user_signed_in? %>
              <%= render 'favourited_link', workshop: workshop %>
          <% end %>
          </div>
        <div class="workshop-icon-flex">


        </div>
      </div>
    </div>
  <% end %>
</div>
