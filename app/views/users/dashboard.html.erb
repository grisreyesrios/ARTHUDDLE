<div class="container">
   <h1>Welcome to your dashboard!</h1>
  <div class="dashboard-container">
      <div class="card">
        <div class="card-content">
          <div class="favourited-workshop-section">
            <h1>My favourited classes:</h1>
             <% current_user.find_liked_items.each do |workshop| %>
             <p><%=  link_to workshop.name, workshop_path(workshop) %></p>
             <% end %>
          </div>
          </div>
        </div>

         <div class="card">
          <div class="card-content">
          <div class="booked-section">
            <h1>My booked classes:</h1>
            <div class="class-item">
            <% @bookings.each do |booking| %>
            <h2><%=  link_to booking.workshop.name, workshop_path(booking.workshop) %></h2>
            <p>Booked: <strong><%= booking.date %></strong></p>
             </div>
          <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
